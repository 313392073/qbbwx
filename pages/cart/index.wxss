page{
    background: #f7f8fa;
}

.view-head{
    width: 100%;
    height: 140rpx;
    background: #ffffff;
    border-bottom: 5rpx solid #e4e5e7;
    display: flex;
    flex-direction: row;
    
}

.select{
    border-bottom: 5rpx solid #f50000;
}

.tab-item{
    height: 100%;
    display: flex;
    flex-direction: column;
    width: 20%;
    align-items: center;
    justify-content: center;
}

.tab-item image{
    width: 35rpx;
    height: 42rpx;
}


.tab-item text{
    color: #444;
    font-size: 27rpx;
    margin-top: 20rpx;
}

.view-tint{
    width: 100%;
    height: 100%;
    
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 120rpx;
}

.view-tint image{

   width: 400rpx;
   height: 238rpx;
   margin-left: 0rpx;
}

.view-tint text{
   color: #888888;
   font-size: 33rpx;
   margin-top: 30rpx;
}


.order-item {
	margin-bottom: 10px;
	background: #fff;
}

.order-item:last-child {
	margin-bottom: 0;
}

.order-footer {
	padding: 3px 0;
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	margin-right: 20rpx;
	border-bottom: 1px solid #eee;
	
	align-items: center;
	height: 80rpx;
}

.order-footer text {
	font-size: 28rpx;
	
	
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	height:150rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:750rpx;
	background: #f7f8fa;
	padding: 20rpx 0 20rpx 0;
}

/*左部图片*/
.carts-image {
	width:150rpx;
	height:150rpx;
	margin-left: 30rpx;
}


/*右部描述*/
.carts-text {
	margin-left:30rpx;
	width: 500rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
    
}

.btn-pay{
	margin-bottom: 5rpx;
	height: 50rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	font-size: 27rpx;
	line-height: 50rpx;
	color: #fff;
	background: #f50000;
	align-self: flex-end;
	border-radius: 6rpx;
	margin-left: 20rpx;
	margin-top: 10rpx;
}

.btn-pay1{
	margin-bottom: 5rpx;
	height: 50rpx;
	
	font-size: 27rpx;
	line-height: 50rpx;
	color: #fff;
	width:100rpx;
	text-align: center;
	background: #f50000;
	align-self: flex-end;
	border-radius: 6rpx;
	margin-left: 20rpx;
}


.btn-cancel{
	margin-bottom: 5rpx;
	height: 50rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	font-size: 27rpx;
	line-height: 50rpx;
	color: gray;
	border-color: gray;
	border-width: 1rpx;
	border-style: solid;
	background: #ffffff;
	align-self: flex-end;
	border-radius: 6rpx;
	margin-top: 10rpx;
}


/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: #444;
	line-height: 38rpx;
	
}

/*右下部分价格与数量*/
.carts-subtitle {
	margin-top: 20rpx;
	font-size: 25rpx;
	color:darkgray;
	padding: 0 0rpx;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}

/*价格*/
.carts-price {
	color: #383838;
	font-size:27rpx;
	line-height: 22px;
}

.carts-num {
	color: #383838;
	font-size:28rpx;
	line-height: 22px;
}

.carts-right{
	width: 140rpx;
	display: flex;
	
	justify-content: space-around;
	flex-direction: column;
	align-items: flex-end;
    margin-right: 20rpx;
}

.view-title{
	height: 68rpx;
	display: flex;
	flex-direction: row;
	
	align-items: center;
	border-bottom: 1px solid #eee;
}

.view-title image {
	margin-left: 20rpx;
	width: 40rpx;
	height:40rpx;
}

.view-title text {
	font-size: 28rpx;
	color: #383838;
	margin-left: 15rpx;
}

.class-tab{
    display: flex;
	flex-direction: row;
	margin-top: 0rpx;
	justify-content: center;
	background: #ffffff;
	width: 750rpx;
	border-bottom: 3px solid #eee;
}

.text-select{
	width: 140rpx;
	font-size: 30rpx;
	color: red;
	line-height: 60rpx;
	height: 60rpx;
	border-bottom-width: 6rpx;
	border-color: red;
	border-style: solid;
	text-align: center;
	border-top-width: 0;
	border-left-width: 0;
	border-right-width: 0;
}
.text-normal{
	width: 140rpx;
	font-size: 30rpx;
	color: #4D4D4D;
	height: 60rpx;
	line-height: 60rpx;
	border-bottom-width: 0;
	border-color: red;
	border-style: solid;
	text-align: center;
	border-top-width: 0;
	border-left-width: 0;
	border-right-width: 0;
}

.footer {
	
	display: flex; 
	flex-direction: row; 
	justify-content: space-between;
	position: absolute;
	bottom: 60rpx;
	right: 60rpx;
	z-index:9999;
}

.footer image{
	position: fixed;
	bottom: 40rpx;
	right: 40rpx;
	width: 100rpx;
	height: 100rpx;
	z-index:9999;
	
}